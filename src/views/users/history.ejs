<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Registro', image: ''}) %>

<body>
   <!-- Header -->
   <%- include('../partials/headerNavbar') %>
   <!-- /Header -->

   <div class="container products-wrapper">
      <div class="row">
         <div class="col-12">
            <h1 class="products-title">Carrito de compras</h1>
         </div>
      </div>
      <div class="product-detail">
         <div class="row">
            <div class="col-12 col-lg-8 pt-4">
               <% if(carts.length != 0){ %>
               <% carts.forEach(cart => { %>
               
               <div class="col-12 mt-3">
                  <section class="row">
                     <h4 class="col-4"><%= new Date(cart.createdAt).toDateString() %> </h4>
                     <section class="col-8 row info">
                        <div class="col-6">
                           <ul>
                              <% cart.items.forEach(item => { %>
                                 <li style="font-size: 12px;">
                                    <small>
                                       <%= item.product.name %> x<%= item.quantity %>
                                    </small>
                                 </li>
                              <% }) %>
                           </ul>
                        </div>
                        <div class="col-6">
                           <p class="product-detail-price">
                              $<%= helpers.toThousand(cart.total); %>
                           </p>
                        </div>
                     </section>
                     <section class="col-3">
                        
                     </section>
                  </section>
               </div>
               <hr>
               <% }); %>
               
               <% } else { %>
               <div class="col-12">
                  <h2 class="products-title" style="padding: 100px 0; color: tomato;">Aun no tienes compras</h2>
               </div>
               <% } %>
            </div>
            <div class="col-12 col-lg-4">
               <article class="product-detail-info">
                  <h2 class="product-detail-title">
                     <%= locals.user.username %>
                  </h2>
                  <hr>
                  
               </article>
            </div>
         </div>
      </div>
   </div>

   <!-- footer -->
   <%- include('../partials/footer') %>
   <!-- /footer -->
</body>

</html>