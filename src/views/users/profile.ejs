<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Registro', image: ''}) %>

<body>
   <!-- Header -->
   <%- include('../partials/headerNavbar') %>
   <!-- /Header -->

   <div class="container products-wrapper">
      <div class="row justify-content-center">
         <div class="col-12">
            <h2 class="products-title"><%= locals.user.username %> </h2>
            <h3 style="text-align: right; font-size: 14px;">
               <a href="/users/history">
                  Mis compras
               </a>
            </h3>
         </div>
         <div class="col-8">
            <div class="row product-detail justify-content-center">
               <div class="col-8 my-3">
                  <img src="/images/users/<%= locals.user.image ? locals.user.image : 'default-image.png' %>" alt="<%= locals.user.username %>">
               </div>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="col-12">
            <h2 class="products-title">Tus productos</h2>
         </div>
         <% if(products.length != 0){ %> 
         <% products.forEach(product => { %>
      
         <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
               <a href="/products/detail/<%= product.id %> ">
                  <figure class="product-box_image">
                     <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                  </figure>
                  <article class="product-box_data">
                     <h2>$<%= helpers.toThousand(product.price) %></h2>
                     <% if(product.discount > 0) { %>
                     <span><%= product.discount %> % OFF</span>
                     <% } %>
                     <p><%= product.name %></p>
                     <i class="fas fa-truck"></i>
                  </article>
               </a>
            </section>
         </div>
      
         <% }); %>
         <% } else { %>
         <div class="col-12">
            <h2 class="noproducts">Todav√≠a no tienes productos a la venta</h2>
         </div>
         <% } %>
      
      </div>
   </div>

   <!-- footer -->
   <%- include('../partials/footer') %>
   <!-- /footer -->
</body>

</html>